@model StockInComeViewModel
<form action="/item/update" method="post">
    @if (ViewBag.Info != null)
    {
        <h1 class="alert alert-success" role="alert">@ViewBag.Info</h1>
    }
    <h2>Edit Item</h2>
    <hr />
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Incomed Date</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="ItemCode" value="@Model.IncomedDate" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select class="form-control" name="CategoryId">
                <option value="@Model.ItemId">@Model.ItemInfo</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.Id">@c.Description</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input class="form-control" type="number" name="Qty" value="@Model.Qty" required />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i>Update</button>
        </div>
    </div>
</form>