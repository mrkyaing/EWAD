<form action="/stockincome/entry" method="post">
    @if (ViewBag.Info != null)
    {
        <h1 class="alert alert-success" role="alert">@ViewBag.Info</h1>
    }
    <h2>Add Item</h2>
    <hr />
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Incomed date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" name="IncomedDate" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Item</label>
        <div class="col-sm-10">
            <select class="form-control" name="ItemId">
                @foreach (var c in ViewBag.Items)
                {
                    <option value="@c.Id">@c.ItemCode</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" name="Qty" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i>Entry</button>
        </div>
    </div>
</form>