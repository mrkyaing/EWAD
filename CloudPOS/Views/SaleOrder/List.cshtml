@model IEnumerable<SaleDetailViewModel>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link href="~/lib/datatables/css/datatables.bootstrap4.min.css" rel="stylesheet" />
</head>
<h1>Sale Order Proccessed Information</h1>
<hr />
@if (TempData["Info"] != null)
{
    <h3 class="alert alert-success" role="alert">@TempData["Info"]</h3>
}
<a href="/saleOrder/entry" class="btn btn-primary" role="button"><i class="bi bi-plus-circle-fill"></i>New Sale Order</a>
<table class="table" id="SaleOrderTable">
    <thead>
        <tr>
            <th scope="col">Sr.No</th>
            <th scope="col">Sale Order Date</th>
            <th scope="col">ItemInfo</th>
            <th scope="col">UnitPrice</th>
            <th scope="col">Qty </th>
            <th scope="col">Remark</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var c in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@c.SaleOrderedAt</td>
                <td>@c.ItemInfo</td>
                <td>@c.UnitPrice</td>
                <td>@c.Qty</td>
                <td>@c.Remark</td>
                 <td>                      
                 <a href="/item/delete?Id=@c.Id" class="btn btn-danger" role="button" onclick="return confirm('are you sure to delete this record?');"><i class="bi bi-trash"></i>Delete</a>
                 </td>
            </tr>
            i++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#SaleOrderTable").DataTable();
    });
</script>
@section Scripts{
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.min.js"></script>
}